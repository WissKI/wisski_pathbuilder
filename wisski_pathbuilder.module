function wisski_form_forward($node) {

  module_load_include('inc', 'node', 'node.pages');

  if(empty($node->nid)) {
    global $user;
    node_object_prepare($node);
    $node->uid = $user->uid;
    $node->name = $user->name;
  }

  $return = drupal_get_form('individual_node_form', $node);
  return $return;

}

